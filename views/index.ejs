<%- include('partials/header') %>

<div class="max-w-screen-xl mx-auto space-y-8 md:space-y-12 pb-12 md:px-0">
    
    <section class="relative bg-white dark:bg-gradient-to-r dark:from-neutral-900 dark:to-neutral-800 rounded-3xl p-6 md:p-12 border border-neutral-200 dark:border-neutral-800 shadow-2xl overflow-hidden">
        
        <div class="absolute top-0 right-0 -mt-10 -mr-10 w-64 h-64 bg-green-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 -mb-10 -ml-10 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 text-center space-y-4 md:space-y-6">
            <h1 class="text-3xl md:text-6xl font-black text-neutral-900 dark:text-white tracking-tight">
                <%= t('index.welcome') %> <span class="text-green-600 dark:text-green-400"><%= user.username %></span> !
            </h1>
            <p class="text-neutral-500 dark:text-neutral-400 text-base md:text-xl max-w-2xl mx-auto">
                <%= t('index.hero_subtitle') %>
            </p>

            <form action="/collection" method="GET" class="w-full max-w-xl mx-auto mt-8">
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none z-10">
                        <i class="fa-solid fa-search text-neutral-400 dark:text-neutral-500 group-focus-within:text-green-500 dark:group-focus-within:text-green-400 transition-colors"></i>
                    </div>
                    <input type="text" name="search" class="block w-full p-4 pl-12 text-base text-neutral-900 dark:text-white bg-gray-50 dark:bg-neutral-950/50 border border-neutral-300 dark:border-neutral-700 rounded-full focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder-neutral-500 backdrop-blur-sm transition-all shadow-lg hover:bg-white dark:hover:bg-neutral-950/80" placeholder="<%= t('index.search_placeholder') %>">
                    <button type="submit" class="absolute right-2 top-2 bottom-2 bg-neutral-200 dark:bg-neutral-700 hover:bg-green-600 dark:hover:bg-green-600 text-neutral-900 dark:text-white hover:text-white font-medium rounded-full text-sm px-4 transition-colors z-10"><%= t('common.go') %></button>
                </div>
            </form>

            <div class="flex flex-wrap justify-center gap-4 pt-4 text-sm text-neutral-500 dark:text-neutral-400">
                <% if (user.isAdmin) { %>
                    <a href="/add-vinyl" class="inline-flex items-center gap-2 hover:text-green-600 dark:hover:text-white transition-colors">
                        <i class="fa-solid fa-plus-circle"></i> 
                        <span class="hidden sm:inline"><%= t('index.nav_add_full') %></span>
                        <span class="sm:hidden"><%= t('index.nav_add_short') %></span>
                    </a>
                    <span class="text-neutral-300 dark:text-neutral-700">|</span>
                <% } %>
                <a href="/collection" class="inline-flex items-center gap-2 hover:text-green-600 dark:hover:text-white transition-colors">
                    <i class="fa-solid fa-list"></i> <%= t('index.nav_view_all') %>
                </a>
            </div>
        </div>
    </section>

    <section>
        <div class="flex items-center justify-between mb-4 md:mb-6 px-2">
            <div class="flex items-center gap-2">
                <span class="w-2 h-6 md:h-8 bg-green-500 rounded-full inline-block"></span>
                <h2 class="text-xl md:text-2xl font-bold text-neutral-900 dark:text-white"><%= t('index.section_latest') %></h2>
            </div>
            <a href="/collection" class="text-sm font-bold text-green-600 dark:text-green-400 hover:text-green-500 dark:hover:text-green-300 transition-colors flex items-center gap-1 group whitespace-nowrap">
                <%= t('index.view_everything') %> <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </a>
        </div>
        <% if (latestCollection.length > 0) { %>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
                <% latestCollection.forEach(album => { %>
                    <a href="/album/<%= album._id %>" class="group relative bg-white dark:bg-neutral-900 rounded-xl overflow-hidden border border-neutral-200 dark:border-neutral-800 hover:border-green-500/50 transition-all hover:shadow-lg hover:-translate-y-1">
                        <div class="aspect-square relative overflow-hidden">
                            <img src="<%= album.cover_image %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                            <% 
                                let badgeColor = 'bg-green-600/90 text-white';
                                let badgeLabel = t('media.vinyl');
                                
                                if (album.media_type === 'cd') {
                                    badgeColor = 'bg-blue-600/90 text-white';
                                    badgeLabel = t('media.cd');
                                } else if (album.media_type === 'cassette') {
                                    badgeColor = 'bg-orange-600/90 text-white';
                                    badgeLabel = t('media.cassette');
                                }
                            %>
                            <span class="absolute top-2 right-2 text-[10px] font-bold px-2 py-1 rounded backdrop-blur-md border border-white/10 shadow-sm <%= badgeColor %>">
                                <%= badgeLabel %>
                            </span>                        
                        </div>
                        <div class="p-3 md:p-4">
                            <h3 class="font-bold text-neutral-900 dark:text-white truncate text-sm md:text-base"><%= album.title %></h3>
                            <p class="text-xs text-neutral-500 dark:text-neutral-400 truncate"><%= album.artist %></p>
                        </div>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-10 border border-dashed border-neutral-300 dark:border-neutral-800 rounded-xl text-neutral-500"><%= t('index.empty_collection') %></div>
        <% } %>
    </section>

    <section>
        <div class="flex items-center justify-between mb-4 md:mb-6 px-2">
            <div class="flex items-center gap-2">
                <span class="w-2 h-6 md:h-8 bg-pink-500 rounded-full inline-block"></span>
                <h2 class="text-xl md:text-2xl font-bold text-neutral-900 dark:text-white"><%= t('index.section_wishlist') %></h2>
            </div>
            <a href="/wishlist" class="text-sm font-bold text-pink-500 dark:text-pink-400 hover:text-pink-400 dark:hover:text-pink-300 transition-colors flex items-center gap-1 group whitespace-nowrap">
                <%= t('index.view_everything') %> <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </a>
        </div>
        <% if (latestWishlist.length > 0) { %>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
                <% latestWishlist.forEach(album => { %>
                    <a href="/album/<%= album._id %>" class="group relative bg-white dark:bg-neutral-900 rounded-xl overflow-hidden border border-neutral-200 dark:border-neutral-800 hover:border-pink-500/50 transition-all hover:shadow-lg hover:-translate-y-1">
                        <div class="aspect-square relative overflow-hidden">
                            <img src="<%= album.cover_image %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                            </div>
                        <div class="p-3 md:p-4">
                            <h3 class="font-bold text-neutral-900 dark:text-white truncate text-sm md:text-base"><%= album.title %></h3>
                            <p class="text-xs text-neutral-500 dark:text-neutral-400 truncate"><%= album.artist %></p>
                            <% if(album.variant_color) { %>
                                <div class="flex items-center gap-1 mt-1">
                                    <span class="w-2 h-2 rounded-full bg-pink-500 inline-block flex-shrink-0"></span>
                                    <span class="text-[10px] text-neutral-500 dark:text-neutral-400 truncate"><%= album.variant_color %></span>
                                </div>
                            <% } %>
                        </div>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-10 border border-dashed border-neutral-300 dark:border-neutral-800 rounded-xl text-neutral-500"><%= t('index.empty_wishlist') %></div>
        <% } %>
    </section>

    <section>
        <h2 class="text-xl md:text-2xl font-bold text-neutral-900 dark:text-white mb-6 px-2"><%= t('index.section_stats') %></h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
            
            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 p-6 rounded-2xl relative overflow-hidden group col-span-1 md:col-span-2">
                <div class="absolute -right-6 -top-6 w-24 h-24 bg-green-500/20 rounded-full blur-xl"></div>
                <div class="flex items-center justify-between h-full">
                    <div>
                        <p class="text-neutral-500 font-medium text-xs md:text-sm uppercase tracking-wider"><%= t('stats.total_label') %></p>
                        <h3 class="text-4xl md:text-5xl font-black text-neutral-900 dark:text-white mt-2">
                            <%= stats.total %> <span class="text-base md:text-lg text-neutral-500 dark:text-neutral-600 font-normal"><%= t('stats.albums_unit') %></span>
                        </h3>
                    </div>
                    <div class="text-3xl md:text-4xl text-neutral-300 dark:text-neutral-800 group-hover:text-green-500/20 transition-colors">
                        <i class="fa-solid fa-database"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 p-6 rounded-2xl flex items-center justify-between">
                <div>
                    <p class="text-neutral-500 font-medium text-xs uppercase tracking-wider mb-1"><%= t('media.vinyls') %></p>
                    <h3 class="text-3xl font-bold text-neutral-900 dark:text-white"><%= stats.vinylCount %></h3>
                </div>
                <div class="w-10 h-10 rounded-full bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-500 flex items-center justify-center">
                    <i class="fa-solid fa-record-vinyl"></i>
                </div>
            </div>

            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 p-6 rounded-2xl flex items-center justify-between">
                <div>
                    <p class="text-neutral-500 font-medium text-xs uppercase tracking-wider mb-1"><%= t('media.cds') %></p>
                    <h3 class="text-3xl font-bold text-neutral-900 dark:text-white"><%= stats.cdCount %></h3>
                </div>
                <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-500 flex items-center justify-center">
                    <i class="fa-solid fa-compact-disc"></i>
                </div>
            </div>

            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 p-6 rounded-2xl flex items-center justify-between">
                <div>
                    <p class="text-neutral-500 font-medium text-xs uppercase tracking-wider mb-1"><%= t('media.cassettes') %></p>
                    <h3 class="text-3xl font-bold text-neutral-900 dark:text-white"><%= stats.cassetteCount %></h3>
                </div>
                <div class="w-10 h-10 rounded-full bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-500 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><circle cx="8" cy="10" r="2"/><path d="M8 12h8"/><circle cx="16" cy="10" r="2"/><path d="m6 20 .7-2.9A1.4 1.4 0 0 1 8.1 16h7.8a1.4 1.4 0 0 1 1.4 1l.7 3"/></svg>
                </div>
            </div>

            <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 p-6 rounded-2xl md:col-span-4 flex flex-col sm:flex-row items-center gap-4 sm:gap-6 text-center sm:text-left">
                <div class="w-16 h-16 rounded-full bg-purple-100 dark:bg-purple-500/20 text-purple-600 dark:text-purple-400 flex items-center justify-center text-3xl border border-purple-200 dark:border-purple-500/30 flex-shrink-0">
                    <i class="fa-solid fa-crown"></i>
                </div>
                <div>
                    <p class="text-neutral-500 font-medium text-sm uppercase tracking-wider"><%= t('stats.top_artist_label') %></p>
                    <h3 class="text-2xl font-bold text-neutral-900 dark:text-white truncate max-w-[250px] mx-auto sm:mx-0"><%= stats.topArtist %></h3>
                    <p class="text-sm text-neutral-500 dark:text-neutral-400"><%= t('stats.owned_times', { count: stats.topArtistCount }) %></p>
                </div>
            </div>

            <div class="md:col-span-4 mt-2">
                <button onclick="openEstimateModal()" class="w-full bg-white dark:bg-neutral-800 hover:bg-gray-50 dark:hover:bg-neutral-700 border border-neutral-200 dark:border-neutral-700 text-neutral-900 dark:text-white font-bold py-4 px-6 rounded-2xl transition-all flex items-center justify-center gap-3 group">
                    <i class="fa-solid fa-calculator text-green-600 dark:text-green-400 group-hover:scale-110 transition-transform"></i>
                    <span><%= t('index.btn_estimate') %></span>
                </button>
            </div>
        </div>
    </section>

</div>

<div id="estimateModal" class="fixed inset-0 z-50 hidden bg-black/80 backdrop-blur-sm flex items-center justify-center p-4">
    <div class="bg-neutral-900 border border-neutral-800 rounded-2xl w-full max-w-lg p-6 md:p-8 shadow-2xl relative">

        <button onclick="closeEstimateModal()" class="absolute top-4 right-4 text-neutral-500 hover:text-neutral-900 dark:hover:text-white">
            <i class="fa-solid fa-xmark text-xl"></i>
        </button>

        <h3 class="text-2xl font-bold text-neutral-900 dark:text-white mb-2"><%= t('modal.estimate_title') %></h3>
        <p class="text-neutral-500 dark:text-neutral-400 text-sm mb-6"><%= t('modal.estimate_desc') %></p>

        <div id="progressContainer" class="mb-6">
            <div class="w-full bg-neutral-200 dark:bg-neutral-800 rounded-full h-4 mb-2 overflow-hidden">
                <div id="estimateProgress" class="bg-green-500 h-4 rounded-full transition-all duration-300" style="width: 0%"></div>
            </div>
            <div class="flex justify-between text-xs text-neutral-500 font-mono">
                <span id="estimateCount">0 / <%= stats.total %></span>
                <span id="estimatePercent">0%</span>
            </div>
        </div>

        <div id="estimateResult" class="hidden text-center space-y-4">
            <div class="p-6 bg-green-500/10 border border-green-500/30 rounded-xl">
                <p class="text-green-600 dark:text-green-400 text-sm font-bold uppercase tracking-wider mb-1"><%= t('modal.avg_label') %></p>
                <h4 id="finalPrice" class="text-4xl md:text-5xl font-black text-neutral-900 dark:text-white">--</h4>
                <p class="text-xs text-neutral-500 mt-2"><%= t('modal.condition_hint') %></p>
            </div>
            
            <div class="grid grid-cols-2 gap-4 text-xs">
                <div class="bg-gray-100 dark:bg-neutral-800 p-3 rounded-lg">
                    <span class="text-neutral-500 dark:text-neutral-400 block"><%= t('modal.min_label') %></span>
                    <span id="minPrice" class="text-neutral-900 dark:text-white font-bold text-lg">--</span>
                </div>
                <div class="bg-gray-100 dark:bg-neutral-800 p-3 rounded-lg">
                    <span class="text-neutral-500 dark:text-neutral-400 block"><%= t('modal.max_label') %></span>
                    <span id="maxPrice" class="text-neutral-900 dark:text-white font-bold text-lg">--</span>
                </div>
            </div>
        </div>

        <div id="startEstimateBtn" class="mt-6 text-center">
            <button onclick="startEstimation()" class="bg-green-600 hover:bg-green-500 text-white font-bold py-3 px-8 rounded-xl transition-colors">
                <%= t('modal.start_btn') %>
            </button>
        </div>
    </div>
</div>

<script>
    const modal = document.getElementById('estimateModal');
    const startBtn = document.getElementById('startEstimateBtn');
    const resultDiv = document.getElementById('estimateResult');
    const progressBar = document.getElementById('estimateProgress');
    const countSpan = document.getElementById('estimateCount');
    const percentSpan = document.getElementById('estimatePercent');
    
    const estimateErrorMsg = "<%= t('messages.estimate_error') %>";
    const currentLocale = '<%= currentLng === "fr" ? "fr-FR" : "en-US" %>';
    const currentCurrency = '<%= currentLng === "fr" ? "EUR" : "USD" %>';

    let totalAlbums = 0;
    let currentProcessed = 0;
    let totalPriceVG = 0;
    let totalPriceMin = 0;
    let totalPriceMax = 0;

    function openEstimateModal() {
        modal.classList.remove('hidden');
    }

    function closeEstimateModal() {
        modal.classList.add('hidden');
    }

    async function startEstimation() {
        startBtn.classList.add('hidden');
        try {
            const res = await fetch('/api/collection/ids');
            const data = await res.json();
            
            if(!data.success) throw new Error("Server Error");
            
            const albums = data.albums;
            totalAlbums = albums.length;
            currentProcessed = 0;
            totalPriceVG = 0;
            totalPriceMin = 0;
            totalPriceMax = 0;

            for (const album of albums) {
                await estimateOneAlbum(album.discogs_id);
                currentProcessed++;                

                const percent = Math.round((currentProcessed / totalAlbums) * 100);
                if (progressBar) progressBar.style.width = percent + '%';
                if (percentSpan) percentSpan.innerText = percent + '%';
                if (countSpan) countSpan.innerText = `${currentProcessed} / ${totalAlbums}`;

                await new Promise(r => setTimeout(r, 500));
            }

            showResults();
        } catch (err) {
            alert(`${estimateErrorMsg} : ${err.message}`);
            startBtn.classList.remove('hidden');
        }
    }

    async function estimateOneAlbum(id) {
        try {
            const res = await fetch(`/api/estimate/${id}`);
            const data = await res.json();
            if (data.success && data.price) {
                const val = data.price.value;
                totalPriceVG += val;
                totalPriceMin += val; 
                totalPriceMax += (val * 1.3);
            }
        } catch (e) {}
    }

    function showResults() {
        const fmt = (val) => new Intl.NumberFormat(currentLocale, { 
            style: 'currency', 
            currency: currentCurrency 
        }).format(val);

        document.getElementById('finalPrice').innerText = fmt(totalPriceVG);
        document.getElementById('minPrice').innerText = fmt(totalPriceMin);
        document.getElementById('maxPrice').innerText = fmt(totalPriceMax);

        document.getElementById('progressContainer').classList.add('hidden');
        resultDiv.classList.remove('hidden');
    }
</script>

<%- include('partials/footer') %>